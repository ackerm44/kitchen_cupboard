<h1> Add Item </h1>
<%= form_for [@pantry, @item] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :inventory %>
  <%= f.number_field :inventory %>
  <br>
  <%= f.label :size %>
  <%= f.text_field :size %>
  <br>
  <!-- Category select or new -->
  <fieldset>
    <legend>Select or add a new category</legend>

    <%= f.collection_radio_buttons :category_id, Category.all, :id, :name %>
    <br><br>

    <%= f.fields_for :categories do |category_builder| %>
      <%= category_builder.label :name, "New category:" %>
      <%= category_builder.text_field :name %><br><br>
    <% end %>
  </fieldset><br><br>

  <%= f.submit %>
<% end %>




