
<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :inventory %>
  <%= f.number_field :inventory %>
  <br>
  <%= f.label :size %>
  <%= f.text_field :size %>
  <br><br>
  <!-- Category select or new -->
  <fieldset>
    <legend>Select or add a new category</legend>
    <br>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "Select a category" %>
    <br><br>

    <%= f.fields_for :categories, @item.build_category do |category_builder| %>
      <%= category_builder.label :name, "New category:" %>
      <%= category_builder.text_field :name %><br><br>
    <% end %>
  </fieldset><br><br>

  <%= f.submit %>
<% end %>
